<title>Edit User</title>
</head>

<body>
  <%- include('header') -%>
    <div class="d-flex flex-row">
      <div class="col-sm-4 d-flex justify-content-center" style="margin-top: 20px; padding-top: 50px;">
        <h3>
          <%=data.message%>
        </h3>
        <br>
        <div class="row">
          <img class="circular--square" src="<%=data.photo%>" width="230" height="230" />
          <!-- <div class="col-sm-1"> -->
          <% let url=`/add_photo` %>
            <a href="<%=url %>" style="color: silver; font-size:18px">
              <%='update photo'%>
            </a>
        </div>
        <!-- </div> -->
      </div>

      <div class="p-5 col-sm-8" style="background-color: whitesmoke;">
        <% for (const [key,value] of Object.entries(data)) {%>

          <% if ((key==="name" ) || (key==="email" ) || (key==="phone" )) {%>
            <ul>
              <h6>
                <%=key%>
              </h6>
              <p class="text-muted">
                <%=value%>
              </p>
            </ul>
            <%}%>

              <% if (key==="created_on" ) {%>
                <ul>
                  <h6>
                    <%='Member since' %>
                  </h6>
                  <p class="text-muted">
                    <%=value.toString().substring(0,15)%>
                  </p>
                </ul>
                <%}%>

                  <%}%>

                    <br>
                    <br>

                    <div class="col">
                      <% let update_id=`update ${data.id}` %>
                        <form action="/edit_Profile" method="GET">
                          <input type="submit" class="p-3 btn btn-grad" value="Update" <%=id=update_id %>/>
                        </form>
                    </div>
      </div>
</body>

</html>