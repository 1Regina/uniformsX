<title>Show uniforms</title>
</head>

<body>
  <%- include('header') -%>
  <%=data.message%>

    <form action="/available/:setId/edit" method="POST" class=".needs-validation">

      <div class="center">
        <div class="col-sm-9 shadow rounded" style="padding-bottom: 30px; padding-top: 30px; background-color: whitesmoke">

          <div class="row">

            <div class="col-sm-4">
              <label for="school" class="form-label ">
                <h5>School:</h5>
              </label>
              <select class="custom-select" id="school" name="school" required>
                <option selected><%=data.item.school_name%></option>
                <% data.schools.forEach((school)=> {%>
                  <option value="<%= school.id %>">
                    <%= school.school_name %>
                  </option>
                  <% }); %>
              </select>
            </div>


            <div class="col-sm-3">
              <label for="type" class="form-label ">
                <h5>Type:</h5>
              </label>
              <select class="custom-select" id="type" name="type" required>
                <option selected><%=data.item.type%></option>
                <% data.uniforms.forEach((catalog)=> {%>
                  <option value="<%= catalog.id %>">
                    <%= catalog.type %>
                  </option>
                  <% }); %>
              </select>
            </div>


            <div class="col-sm-2">
              <label for="size">
                <h5>Size:</h5>
              </label>
              <input type="text" class="form-control capitalize" id="size" value = <%=`${data.item.size}`%>  placeholder="Size" name="size" required>
              <div class="valid-feedback">Valid.</div>
              <div class="invalid-feedback">Please fill out this field.</div>
              </input>
            </div>

            <div class="col-sm-1">
              <label for="quantity">
                <h5>Quantity:</h5>
              </label>
              <input type="text" class="form-control" id="quantity"  value = <%=`${data.item.count}`%> placeholder="Qty" name="quantity" min="1" required>
              <div class="valid-feedback">Valid.</div>
              <div class="invalid-feedback">Please fill out this field.</div>
              </input>
            </div>

          </div>

          <br>
          <button type="submit" class="btn btn-secondary">Submit</button>

        </div>
      </div>
    </form>

</body>

</html>